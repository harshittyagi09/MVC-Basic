@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4"><div class="row p-3"><div class="col-6"><h2 class="text-primary">Categories</h2></div>
        <div class="col-6 text-end"><a class="btn btn-outline-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a></div></div>
</div>

<h1>List of Categories</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead><tr><th style="color:white">Category Name</th><th style="color:white">Display Order</th></tr></thead>
    <tbody>@foreach (var item in Model){<tr><td style="color:white">@item.Name</td><td style="color:white">@item.DisplayOrder</td></tr>}</tbody>
</table>

